# Default local configuration using Ollama
RAG_GENERATOR_TYPE=ollama
RAG_MODEL_NAME=llama3.2:1b
RAG_DEVICE=auto

# Performance tuning
RAG_TEMPERATURE=0.7
RAG_TOP_P=0.9
RAG_MAX_TOKENS=512

# Optional: SpikingBrain configuration (disabled by default)
# Uncomment the lines below to enable SpikingBrain integration
# RAG_GENERATOR_TYPE=spikingbrain
# RAG_MODEL_NAME=Panyuqi/V1-7B-sft-s3-reasoning
# RAG_DEVICE=cuda  # or "cpu" if no GPU available
# RAG_CACHE_DIR=~/.cache/spikingbrain
